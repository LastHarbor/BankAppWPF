<Window x:Class="BankApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:base="clr-namespace:BankApp.ViewModels.Base"
        xmlns:global="clr-namespace:"
        mc:Ignorable="d"
        Title="Выберите пользователя" Height="450" Width="800">
        <Window.DataContext>
            <base:MainWindowViewModel/>
        </Window.DataContext>
    <Canvas Background="DarkSlateGray">
        <ComboBox 
            Canvas.Left="345" 
            Canvas.Top="195" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Width="110"
            ItemsSource="{Binding Roles}"
            SelectedItem="{Binding CurrentUser}"
            DisplayMemberPath="Name">
        </ComboBox>
        <Button 
            Command="{Binding OpenWorkspacewindowCommand}"
            Content="Войти"
            Height="19" 
            Width="74" 
            Canvas.Left="363" 
            Canvas.Top="241"></Button>
    </Canvas>
</Window>
